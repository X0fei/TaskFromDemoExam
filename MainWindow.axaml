<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:CompileBindings="False"
		x:Class="TaskFromDemoExam.MainWindow"
        Title="Вход">
	<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
		<TextBlock HorizontalAlignment="Center" IsVisible="False" Foreground="Red" Name="ErrorLogIn">
			Неверный логин или пароль
		</TextBlock>
		<TextBox Name="Login" HorizontalAlignment="Center" Watermark="Логин"/>
		<TextBox Name="Password" HorizontalAlignment="Center" Watermark="Пароль"/>
		<Button Click="LogIn" HorizontalAlignment="Center">
			<TextBlock>
				Вход
			</TextBlock>
		</Button>
		<Button Click="GusetLogIn" HorizontalAlignment="Center">
			<TextBlock>
				Гость
			</TextBlock>
		</Button>
	</StackPanel>
</Window>
